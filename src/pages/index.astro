<style>
  #parent {
		margin-top: 7.5rem;
		margin-right: 15%;
		margin-left: 15%;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: repeat(5, 1fr);
    grid-column-gap: 0.75rem;
    grid-row-gap: 0.75rem;
  }
  div {
		color: #e3e3e3;
    background-color: #4c4e51;
    border-radius: 1rem;
		padding: 1.5rem;
  }
	span {
		position: relative;
		width: inherit;
		height: inherit;
		word-break: break-word;
	}
  .div1 {
    grid-area: 1 / 1 / 3 / 6;
  }
  .div2 {
    grid-area: 3 / 1 / 6 / 4;
  }
  .div3 {
    grid-area: 3 / 4 / 6 / 6;
  }
</style>
