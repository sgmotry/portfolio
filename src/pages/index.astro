---
import Title from "../components/Title.astro";
import GridManager from "../layouts/GridManager.astro";
---

<!doctype html>
<html lang="jp">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>portfolio</title>
  </head>
  <body>
    <Title />
    <GridManager />
  </body>
</html>

<style>
  html {
    width: 100%;
    height: 100%;
  }
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-image: repeating-linear-gradient(
      -45deg,
      #1b1c1d 0px,
      #1b1c1d 5px,
      #1d1e1f 5px,
      #1d1e1f 10px
    );
  }
</style>

<style is:global>
  /* フォントの定義 */
  @import url("https://fonts.googleapis.com/css2?family=Zen+Kurenaido&display=swap");
  * {
    font-family: "Zen Kurenaido", sans-serif;
    font-weight: 400;
    font-style: normal;
  }

  /* グリッド内のクラス定義 */
  .container {
    position: relative;
    width: inherit;
    height: inherit;
    word-break: break-word;
    font-size: 1.5rem;
  }
  .title {
    font-size: 3rem;
    margin-left: 0;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }
  .description {
    margin-left: 2rem;
    font-size: 1.5rem;
  }
</style>
