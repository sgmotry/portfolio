---
const {text, svgRaw} = Astro.props;
---

<div>
  <div class="wrapper">
    <Fragment set:html={svgRaw} class="svg"/>
  </div>
  {text}
</div>

<style>
  div {
    width: 100px;
    display: flex;
    flex-direction: column;
    font-size: 1.25rem;
    text-align: center;
  }
  .wrapper {
    width: 100px;
    height: 60px;
  }
  .wrapper :global(svg) {
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>