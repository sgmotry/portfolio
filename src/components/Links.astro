---
import githubIcon from "../images/github.svg?raw";
---

<div class="container">
  <h1 class="title">Links</h1>
  <div class="description">
    <a href="https://github.com/sgmotry" target="_blank">
      <div class="wrapper">
        <Fragment set:html={githubIcon} class="svg" />
      </div>
      Github
    </a>
  </div>
</div>

<style>
  a {
    display: flex;
    font-size: 1.5rem;
    color: #e3e3e3;
    text-decoration: none;
  }
  img {
    margin-top: auto;
    margin-bottom: auto;
    margin-right: 0.5rem;
  }
  .wrapper {
    width: 40px;
    height: 40px;
    margin-right: 0.5rem;
  }
  .wrapper :global(svg) {
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>
