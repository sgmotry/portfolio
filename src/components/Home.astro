---
import AboutMe from "./AboutMe.astro"
import Links from "./Links.astro"
import Products from "./Products.astro"
import Skills from "./Skills.astro"

---

<!-- グリッド管理用 -->
<main id="parent">
  <div class="block aboutMe">
    <AboutMe />
  </div>
  <div class="block links">
    <Links />
  </div>
  <div class="block products">
    <Products />
  </div>
  <div class="block skills">
    <Skills />
  </div>
</main>

<style>
  #parent {
    margin-right: 15%;
    margin-left: 15%;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: repeat(5, 1fr);
    grid-column-gap: 0.75rem;
    grid-row-gap: 0.75rem;
  }
  .block {
    color: #e3e3e3;
    background-color: #4c4e5180;
    padding: 1.5rem;
  }
  .aboutMe {
    grid-area: 1 / 1 / 3 / 4;
  }
  .links {
    grid-area: 1 / 6 / 3 / 4;
  }
  .products {
    grid-area: 3 / 1 / 6 / 4;
  }
  .skills {
    grid-area: 3 / 4 / 6 / 6;
  }
</style>
